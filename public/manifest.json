{
  "manifest_version": 3,

  "name": "Live Chat Grid",
  "version": "1.0.2",
  "description": "Live Chat Grid",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/livechatgrid",

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "all_frames": true,
      "js": ["yt.js"]
    },
    {
      "matches": ["https://live.nicovideo.jp/watch/lv*"],
      "all_frames": true,
      "js": ["nico.js"]
    }
  ],

  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ]
}
